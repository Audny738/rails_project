<main role="main">
    <section class="jumbotron text-center">
        <div class="container">
            <h1>Welcome!<h1>
            <p class="lead text-muted">
                In this page you can find all our romms available. If you're interested in one, just click on <strong>Separate</strong>!
            </p>
        </div>
    </section>
    <div class="album py-5 bg-light">
        <div class="container">
            <% if logged_in?(:site_admin) %>
                <div class="text-center my-3">
                    <%= link_to 'Create Room', new_room_path, class: 'btn btn-primary' %>
                </div>
            <% end %>

            <div class="row">
                <% @rooms.each do |room| %>
                  <div class="col-md-4">
                    <div class="card mb-4 shadow-sm text-center">
                        <%= image_tag (room.image).to_s %>
                        <div class="card-body">
                            <p class="card-text">
                                <%= room.description.split(" ").first(15).join(" ") %>
                            </p>
                            <%= link_to 'Details', room_path(room), class: 'btn btn-warning' %>
                            <% if !room.taken %>
                                <%= link_to 'Reserve', reserve_room_path(room), class: 'btn btn-success' %>
                            <% end %>
                        </div>
                    </div>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</main>