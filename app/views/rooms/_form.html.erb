<%= form_with(model: room) do |form| %>
    <% if room.errors.any? %>
        <div>
            <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved: </h2>

            <ul>
                <% room.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col mb-6">
            <div class="form-group">
                <%= form.label :Length %>
                <%= form.text_field :length, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :Width %>
                <%= form.text_field :width, class: 'form-control' %>
            </div>
        
            <div class="form-group">
                <label class="btn btn-primary">
                    Imagen <%= form.file_field :image, style: 'display:none' %>
                </label>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <%= form.label :Description %>
                <%= form.text_area :description, class: 'form-control', rows: 13 %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <%= form.submit 'Save', class: 'btn btn-primary btn-block' %>
            </div>
        </div>
    </div>
<% end %>